<% if signed_in? %>
  <h1>YOUR GROUPS</h1>
  <% if current_user.memberships.exists? %>
    <% current_user.memberships.each do |membership| %>
    <ul>
      <li><%= membership.group.name %></li>
    </ul>
    <% end %>
  <% else %>
    <h1><%= link_to 'Join A Group', new_membership_path %></h1>
  <% end %>
<% end %>
