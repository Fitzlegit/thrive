<div id="comments">
  <div class="comment">
    <p class="comment_content"><%= comment.comment %>
      <div class="buttons">
        <%= link_to "Edit", edit_post_comment_path(comment.post, comment) %>
        <%= button_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure you want to do this? "} %>
      </div>
    <p class="comment_author"><%= "- #{comment.user.first_name}" + " " + "#{comment.user.last_name.slice(0)}." %></p>
  </div>
</div>
