<div id="post_content">
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
<br/>
<hr/>
<br/>
<div id="comments">
  <h2><%= @post.comments.count %> Comments </h2>
  <%= render @post.comments %>
<br/>
  <h3>Reply to thread</h3>
  <%= render "comments/form" %>
</div>
  <div id="new_post">
    <div class="button">
      <%= link_to "Edit", edit_post_path(@post) %><a/>
      <%= button_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this? "} %>
      <%= link_to "Home", root_path %>
    </div>
  </div>
</div>
